@using Microsoft.AspNetCore.Identity;
@using TopNews.Core.DTOS.User;
@using TopNews.Core.Entities.User;
@model List<UsersDTO>
@inject UserManager<AppUser> UserManager
@{
    <link rel="stylesheet" href="~/dashboard/plugins/jsgrid/jsgrid.min.css">
    <link rel="stylesheet" href="~/dashboard/plugins/jsgrid/jsgrid-theme.min.css">
    var _user = await UserManager.GetUserAsync(User);
    var email = await UserManager.GetEmailAsync(_user);
}

<section class="content-wrapper">
    <!-- Main content -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Users</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Users</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Role</th>
                                        <th>Name</th>
                                        <th>Lastname</th>
                                        <th>Mail</th>
                                        <th>Is confirmed</th>
                                        <th>LockedOut</th>
                                         @if (@User.IsInRole("Administrator"))
                                        {
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Role</td>
                                            <td>@user.FirstName</td>
                                            <td>@user.LastName</td>
                                            <td>@user.Email</td>
                                            <td>@user.IsEmailConfirmed</td>

                                            <td>@user.LockedOut</td>
                                            @if (@User.IsInRole("Administrator") && user.Email != email)
                                            {
                                                <td><a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-block btn-warning btn-sm">Edit</a></td>
                                                <td><a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-block btn-danger btn-sm">Delete</a></td>
                                            }
                                        </tr>
                                    }
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.content -->
                    <!-- /.content-wrapper -->
                    <!-- Control Sidebar -->
                    <aside class="control-sidebar control-sidebar-dark">
                        <!-- Control sidebar content goes here -->
                    </aside>
                </div>
            </div>
        </div>
    </section>
</section>
