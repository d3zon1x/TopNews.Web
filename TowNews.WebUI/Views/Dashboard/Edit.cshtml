@using Microsoft.AspNetCore.Identity;
@using TopNews.Core.DTOS.User;
@using TopNews.Core.Entities.User;
@using TopNews.WebUI.Models.ViewModels;
@inject UserManager<AppUser> UserManager;
@{
    
}
@model EditUserDTO
<section class="min-vh-100 mb-8">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                    <div class="text-center pt-4">
                        <h5>Update profile information</h5>
                    </div>
                    <div class="card-body">
                        <form role="form text-left" method="post" asp-controller="Dashboard" asp-action="Edit">
                            @if (@ViewBag.AuthError != null)
                            {
                                <span class="text-danger">@ViewBag.AuthError</span>
                            }
                            <div class="mb-3">
                                <input asp-for="Id" type="hidden" class="form-control" aria-label="Id" aria-describedby="email-addon" />
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName" aria-label="FirstName" value="@Model.FirstName">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="LastName" type="text" class="form-control" placeholder="LastName" aria-label="LastName" value="@Model.LastName">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon" value="@Model.Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone" aria-label="PhoneNumber" aria-describedby="PhoneNumber-addon" value="@Model.PhoneNumber">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3 form-group">
                                <label>Role</label>
                                <select class="form-control select2" name="Role" style="width: 100%;" id="InputRole" asp-for="@Model.Role">
                                    @foreach (var _user in ViewBag.RoleList)
                                    {
                                        <option>@_user</option>
                                    }
                                </select>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>